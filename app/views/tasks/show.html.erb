<h1>Task details</h1>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title"><%= @task.title %></h3>
    </div>
    <div class="panel-body">
        <%= @task.description %>
    </div>
</div>

<% if !@task.completed # use unless %>
    <span class="label label-warning">In progress</span>
<% else %>
    <span class="label label-success">Completed</span>
<% end %>

<span class="label label-danger">Due date: <%= @task.due_date %></span>
<span class="label label-primary">Priority: <%= @task.priority %></span>


<div class="control-buttons-wrapper">
    <%= link_to @task, method: :delete,
                      data: { confirm: "You sure?" }, class: 'btn btn-small btn-danger', remote: true do %>
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                      <% end %>
                          
    <%= link_to edit_task_path(@task), class: 'btn btn-small btn-success' do %>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    <% end %>
</div>